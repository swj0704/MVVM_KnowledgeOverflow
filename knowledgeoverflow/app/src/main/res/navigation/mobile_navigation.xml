<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_slideshow">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.knowledgeoverflow.view.fragment.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_slideshow"
        android:name="com.example.knowledgeoverflow.view.fragment.SlideshowFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.example.knowledgeoverflow.view.fragment.SettingFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_setting" />
</navigation>