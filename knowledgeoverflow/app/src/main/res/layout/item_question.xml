<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="viewModel"
            type="com.example.knowledgeoverflow.widget.recyclerview.viewmodel.QuestionItemViewModel" />
    </data>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_comment"
        android:padding="20dp"
        android:orientation="vertical"
        android:onClick="@{() -> viewModel.detail()}">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@={viewModel.title}"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="43dp" />

        <TextView
            android:id="@+id/item_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@={viewModel.theme}"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="188dp"
            tools:layout_editor_absoluteY="228dp" />
    </LinearLayout>
</layout>
